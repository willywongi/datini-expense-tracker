server {
    listen 80 default_server;
    return 444;
}

server {
    listen 80;
    server_name ${HOSTNAME};
    root /usr/share/nginx/html;
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_http_version 1.1;
    gzip_min_length 256;
    gzip_types text/plain text/css application/json application/x-javascript text/javascript application/javascript application/vnd.ms-fontobject application/x-font-ttf font/opentype image/svg+xml image/x-icon;
	
    location ${DJANGO_MEDIA_URL} {
        expires max;
    }

    location / {
        try_files /$uri @django;
	}

    location @django {
      	add_header Permissions-Policy interest-cohort=();
		proxy_pass http://${DJANGO_CONTAINER_NAME}:${DJANGO_PORT};
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Host $http_host;
		proxy_redirect off;
    }
}
